{
  "author": "Local LLM Workbench",
  "name": "local-llm-workbench",
  "version": "0.1.0",
  "description": "Local LLM Workbench desktop app",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npm run build:renderer",
    "build:renderer": "esbuild src/renderer/index.tsx --bundle --outfile=dist/renderer.js --platform=browser --loader:.tsx=tsx",
    "win": { "icon": "build/icon.ico" },
    "dev": "concurrently \"tsc -w\" \"npm:dev:electron\"",
    "dev:electron": "wait-on dist/main.js && electron dist/main.js",
    "lint": "tsc --noEmit",
    "package": "npm run build && electron-builder --win msi"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "electron-log": "^5.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^9.1.0",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3",
    "wait-on": "^8.0.1",
    "@electron-forge/cli": "^7.4.0"
  },
  "build": {
    "appId": "com.localllmworkbench.desktop",
    "productName": "Local LLM Workbench",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "scripts/**/*",
      "../stack/**/*"
    ],
    "win": {
      "target": ["msi"],
      "signtoolOptions": {
        "publisherName": "MTheUnexpected"
      }
    }
  }
}
